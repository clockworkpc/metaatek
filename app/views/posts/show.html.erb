<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row justify-content-center">
    <%= render @post %>
  </div>

  <div class="row">
    <% if current_user %>
      <div class="col-md-1 btn-lg"><%= link_to t('post.edit'), edit_post_path(@post) %></div>
      <div class="col-md-1 btn-lg"><%= link_to t('post.delete'), @post, method: :delete %></div>
    <% end %>
    <div class="col-md-1 btn-lg"><%= link_to t('post.back_to'), posts_path %></div>

  </div>


</div>



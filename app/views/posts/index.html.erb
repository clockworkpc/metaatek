<p style="color: green"><%= notice %></p>

<div class="container">
  <h1><%= t('post.all') %></h1>
  <%= link_to t('post.new'), new_post_path, class: "btn btn-primary" %>
 <hr class="my-4"> 

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="text-right card-body">
            <%= link_to post_path(post) do %>
<h5 class="card-title"><span class="paleo-hebrew"><%= post.title %> | </span><%= post.title %></h5>
              <% end %>
            <p class="paleo-hebrew"><%= post.content %></p>
            <br>
            <!-- Add other content here -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
